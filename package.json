{
    "name": "node-red-piep",
    "description": "Ein Node-RED-Projekt",
    "version": "0.0.1",
    "dependencies": {
        "node-red": "0.20.*"
    },
    "node-red": {
        "settings": {
            "flowFile": "flow.json",
            "credentialsFile": "flow_cred.json"
        }
    },
    "scripts": {
        "start": "node –max-old-space-size=160 ./node_modules/node-red/red.js –userDir . –settings ./settings.js flow.json"
    },
    "engines": {
        "node": "10.x"
    }
}
